{
    "compilerOptions": {
      "target": "ES2023",
      "module": "Node16",
      "moduleResolution":"Node16",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
    },
    "ts-node": {
        "esm": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }